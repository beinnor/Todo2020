@page
@model IndexModel
@{
    ViewData["Title"] = "Todo 2020";
}



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Here are your todos!</p>
</div>

<p>    
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoItem[0].IsComplete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TodoItem)
        {
            <tr>
                <td>
                    @if (item.IsComplete)
                    {
                        <del>
                            @Html.DisplayFor(modelItem => item.Name)
                        </del>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Name)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsComplete)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
